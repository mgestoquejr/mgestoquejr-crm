<div class="row">
  <%= form_with(model: customer) do |form| %>
    <% if customer.errors.any? %>
      <div class="alert alert-danger" role="alert">
        <h4><%= pluralize(customer.errors.count, "error") %> prohibited this customer from being saved:</h4>

        <ul>
          <% customer.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.label :first_name %>
      <%= form.text_field :first_name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :last_name %>
      <%= form.text_field :last_name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :email %>
      <%= form.text_field :email, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :phone %>
      <%= form.text_field :phone, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :company %>
      <%= form.text_field :company, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :probability, style: "display: block" %>
      <%= form.number_field :probability, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.submit class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
